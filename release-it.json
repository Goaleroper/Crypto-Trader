{
    "hooks": {
      "before:init": ["npm test"],
      "after:bump": "npm run build",
      "before:push": "echo Successfully released ${name} v${version} to ${repo.repository}"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true,
      "requireBranch": "master"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
  